{
  "manifest_version": 3,
  "name": "Example WASM WebExtension",
  "description": "Simple WebExtension in Go",
  "homepage_url": "https://github.com/primecitizens/pcz/tree/master/examples/10-plat-webext",
  "version": "0.1.0",
  "permissions": ["tabs", "bookmarks", "contextMenus"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "List Bookmarks",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self' 'wasm-unsafe-eval'"
  }
}
